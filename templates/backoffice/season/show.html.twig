{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>
    <a class="btn btn-success" href="{{ path('backoffice_season_index') }}">back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>NbEpisode</th>
                <td>{{ season.nbEpisode }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-warning" href="{{ path('backoffice_season_edit', {'id': season.id}) }}">edit</a>

    {{ include('backoffice/season/_delete_form.html.twig') }}
{% endblock %}
