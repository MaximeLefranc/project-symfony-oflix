{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>
    <a class="btn btn-success" href="{{ path('backoffice_season_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbEpisode</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.nbEpisode }}</td>
                <td>{{ season.number }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('backoffice_season_show', {'id': season.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('backoffice_season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
