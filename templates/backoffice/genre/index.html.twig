{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Genre index
{% endblock %}

{% block body %}
	<h1>Genre index</h1>
	<a class="btn btn-success" href="{{ path('backoffice_genre_new') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for genre in genres %}
				<tr>
					<td>{{ genre.id }}</td>
					<td>{{ genre.name }}</td>
					<td>
						<a class="btn btn-info" href="{{ path('backoffice_genre_show', {'id': genre.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('backoffice_genre_edit', {'id': genre.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
