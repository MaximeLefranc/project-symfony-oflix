{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Person
{% endblock %}

{% block body %}
	<h1>Person</h1>
	<a class="btn btn-info" href="{{ path('backoffice_person_index') }}">back to list</a>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ person.id }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ person.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ person.lastname }}</td>
			</tr>
		</tbody>
	</table>


	<a class="btn btn-warning" href="{{ path('backoffice_person_edit', {'id': person.id}) }}">edit</a>

	{{ include('backoffice/person/_delete_form.html.twig') }}
{% endblock %}
