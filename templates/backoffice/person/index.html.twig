{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Person index
{% endblock %}

{% block body %}
	<h1>Person index</h1>
	<a class="btn btn-info" href="{{ path('backoffice_person_new') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Firstname</th>
				<th>Lastname</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for person in people %}
				<tr>
					<td>{{ person.id }}</td>
					<td>{{ person.firstname }}</td>
					<td>{{ person.lastname }}</td>
					<td>
						<a class="btn btn-info" href="{{ path('backoffice_person_show', {'id': person.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('backoffice_person_edit', {'id': person.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
